---
interface Props {
  name: string;
  position?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right';
}

const { name, position = 'top-left' } = Astro.props;

const isDev = import.meta.env.DEV;

const positionClasses = {
  'top-left': 'top-0 left-0 rounded-br-lg',
  'top-right': 'top-0 right-0 rounded-bl-lg',
  'bottom-left': 'bottom-0 left-0 rounded-tr-lg',
  'bottom-right': 'bottom-0 right-0 rounded-tl-lg',
};
---

{
  isDev && (
    <div
      class:list={[
        'absolute z-[9999] px-3 py-1 bg-magenta-500/90 text-white text-xs font-mono font-bold uppercase tracking-wider pointer-events-none border border-white/20 shadow-lg backdrop-blur-sm',
        positionClasses[position],
      ]}
      style="background-color: #d946ef;"
    >
      DEV: {name}
    </div>
  )
}
