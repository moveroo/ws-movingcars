---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/sydney-to-melbourne/', label: 'Sydney to Melbourne' },
  { href: '/melbourne-to-brisbane/', label: 'Melbourne to Brisbane' },
  { href: '/perth-to-sydney/', label: 'Perth to Sydney' },
  { href: '/brisbane-to-adelaide/', label: 'Brisbane to Adelaide' },
];

const services = [
  { href: '/services/open-carrier/', label: 'Open Carrier Transport' },
  { href: '/services/enclosed/', label: 'Enclosed Transport' },
  { href: '/services/door-to-door/', label: 'Door-to-Door Delivery' },
  { href: '/services/depot/', label: 'Depot-to-Depot' },
];
---

<footer class="bg-[var(--color-primary-900)] text-white">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-4">
          <span class="text-2xl font-bold">MOVING CARS</span>
        </a>
        <p class="text-[var(--color-neutral-300)] text-sm leading-relaxed mb-4">
          Australia's trusted interstate car transport specialists. Professional, reliable, and
          fully insured vehicle shipping nationwide.
        </p>
        <div class="flex gap-4">
          <a
            href="#"
            class="text-[var(--color-neutral-400)] hover:text-white transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
            </svg>
          </a>
          <a
            href="#"
            class="text-[var(--color-neutral-400)] hover:text-white transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
        </div>
      </div>

      <!-- Popular Routes -->
      <div>
        <h3 class="font-bold text-lg mb-4">Popular Routes</h3>
        <ul class="space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-[var(--color-neutral-300)] hover:text-white transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-bold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2">
          {
            services.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-[var(--color-neutral-300)] hover:text-white transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-bold text-lg mb-4">Contact Us</h3>
        <ul class="space-y-3 text-sm text-[var(--color-neutral-300)]">
          <li class="flex items-start gap-2">
            <svg
              class="w-5 h-5 mt-0.5 text-[var(--color-accent-400)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a href="mailto:info@movingcars.com.au" class="hover:text-white">
              info@movingcars.com.au
            </a>
          </li>
          <li class="flex items-start gap-2">
            <svg
              class="w-5 h-5 mt-0.5 text-[var(--color-accent-400)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a href="tel:1300123456" class="hover:text-white">1300 123 456</a>
          </li>
          <li class="flex items-start gap-2">
            <svg
              class="w-5 h-5 mt-0.5 text-[var(--color-accent-400)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>Australia Wide Service</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-[var(--color-primary-800)]">
    <div
      class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-4"
      style="padding-top: 2.5rem; padding-bottom: 2.5rem;"
    >
      <p class="text-sm text-[var(--color-neutral-400)]">
        &copy; {currentYear} Moving Cars. All rights reserved. Australian Owned & Operated.
      </p>
      <nav class="flex gap-6 text-sm">
        <a
          href="/privacy/"
          class="text-[var(--color-neutral-400)] hover:text-white transition-colors"
        >
          Privacy Policy
        </a>
        <a
          href="/terms/"
          class="text-[var(--color-neutral-400)] hover:text-white transition-colors"
        >
          Terms of Service
        </a>
      </nav>
    </div>
  </div>
</footer>
