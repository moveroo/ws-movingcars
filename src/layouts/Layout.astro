---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const PRODUCTION_DOMAIN = 'https://movingcars.com.au';
const currentPath = Astro.url.pathname;
const canonicalUrl = `${PRODUCTION_DOMAIN}${currentPath}`;

const {
  title = 'Moving Cars | Interstate Car Transport Australia',
  description = 'Professional interstate car transport across Australia. Get a free quote for car shipping from Sydney, Melbourne, Brisbane, Perth, and all major cities.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="robots" content="index, follow" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts - Inter + Montserrat -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@700;800;900&display=swap"
      rel="stylesheet"
    />

    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-[var(--color-neutral-50)]">
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
  </body>
</html>
