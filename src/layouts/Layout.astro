---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Font Imports
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/montserrat/700.css';
import '@fontsource/montserrat/800.css';
import '@fontsource/montserrat/900.css';

interface Props {
  title?: string;
  description?: string;
}

const PRODUCTION_DOMAIN = 'https://movingcars.com.au';
const currentPath = Astro.url.pathname;
const canonicalUrl = `${PRODUCTION_DOMAIN}${currentPath}`;

const {
  title = 'Moving Cars | Interstate Car Transport Australia',
  description = 'Professional interstate car transport across Australia. Get a free quote for car shipping from Sydney, Melbourne, Brisbane, Perth, and all major cities.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="robots" content="index, follow" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts - Inter + Montserrat (Self-hosted) -->
    <!-- Fonts now loaded via @fontsource imports in frontmatter -->

    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-[var(--color-neutral-50)]">
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
  </body>
</html>
